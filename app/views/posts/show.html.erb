<div class="post">
  <div class="title">
    <%= @post.title %>
  </div>
  <div class="date">
    <%= @post.date %>
  </div>

  <div class="post-content"><%= markdown @post.content %></div>

  <div class="previous"><%= link_to "...#{@previous.title}", post_path(@previous) %></div>
  <div class="next"><%= link_to "#{@next.title}...", post_path(@next) %></div>

</div>

<div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'jypepinblog'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
